<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="edu.francis.my.sfupa.JavaFX.Controller.InstructorEvaluation"
            prefHeight="600.0" prefWidth="800.0">

    <!-- Menu Bar (Top) -->
    <top>
        <VBox>
            <MenuBar>
                <Menu text="File">
                    <MenuItem text="Open" />
                    <MenuItem text="Save" />
                    <MenuItem text="Exit" onAction="#handleExit"/>
                </Menu>
                <Menu text="Edit">
                    <MenuItem text="Undo" />
                    <MenuItem text="Redo" />
                </Menu>
                <Menu text="Help">
                    <MenuItem text="About" onAction="#handleAbout"/>
                </Menu>
            </MenuBar>
            <HBox spacing="10" style="-fx-padding: 15px;">
                <ComboBox fx:id="courseAnalysisCombo" promptText="Select Course" />
                <ComboBox fx:id="semesterAnalysisCombo" promptText="Select Semester" />
                <ComboBox fx:id="yearAnalysisCombo" promptText="Select Year" />
                <Button text="Analyze" onAction="#handleAnalyzeData" />
            </HBox>
        </VBox>
    </top>

    <!-- Sidebar Navigation (Left) -->
    <left>
        <VBox prefWidth="150.0" spacing="10" style="-fx-background-color: #2C3E50; -fx-padding: 15px;">
            <Button text="Dashboard" onAction="#handleBackMain" style="-fx-background-color: #ECF0F1; -fx-text-fill: black; -fx-font-size: 14px;" />
            <Button text="Guest Lecturer" onAction="#handleGuestLecturer" style="-fx-background-color: #ECF0F1; -fx-text-fill: black; -fx-font-size: 14px;" />
            <Button text="Gradebook" onAction="#handleGradebook" style="-fx-background-color: #ECF0F1; -fx-text-fill: black; -fx-font-size: 14px;" />
            <Button text="Instructor Eval" onAction="#handleInstructorEval" style="-fx-background-color: #ECF0F1; -fx-text-fill: black; -fx-font-size: 14px;" />
        </VBox>
    </left>

    <!-- Main Content Area -->
    <center>
        <VBox fx:id="analysisResultsContainer" spacing="15">
            <Label text="Analyze Instructor Evaluations" style="-fx-font-size: 18px;"/>
            <BarChart fx:id="likertBarChart" title="Likert Scale Responses">
                <xAxis>
                    <CategoryAxis label="Response" />
                </xAxis>
                <yAxis>
                    <NumberAxis label="Percentage" upperBound="100" />
                </yAxis>
            </BarChart>
            <TextArea fx:id="openEndedResponsesArea"
                      editable="false"
                      wrapText="true"
                      prefHeight="200"
                      promptText="Open-ended responses will appear here" />
            <Button text="Back to Instructor Evaluation" onAction="#handleBack"/>
        </VBox>
    </center>
</BorderPane>
