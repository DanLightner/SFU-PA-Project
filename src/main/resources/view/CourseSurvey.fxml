<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="edu.francis.my.sfupa.JavaFX.Controller.MainController"
            prefHeight="400.0" prefWidth="600.0">

    <!-- Menu Bar -->
    <top>
        <MenuBar>
            <Menu text="File">
                <MenuItem text="Open" />
                <MenuItem text="Save" />
                <MenuItem text="Exit" onAction="#handleExit"/>
            </Menu>
            <Menu text="Edit">
                <MenuItem text="Undo" />
                <MenuItem text="Redo" />
            </Menu>
            <Menu text="Help">
                <MenuItem text="About" onAction="#handleAbout"/>
            </Menu>
        </MenuBar>
    </top>

    <!-- Main Content Area -->
    <center>
        <VBox alignment="CENTER" spacing="15">
            <Label text="Welcome to SFU PA Application!" />
            <Button text="Course Survey" onAction="#handleCourseSurvey"/>
            <Button text="Instructor Eval" onAction="#handleInstructorEval"/>
            <Button text="Gradebook" onAction="#handleGradebook"/>
            <Button text="Upload Guest Lecturer CSV" onAction="#handleUploadCSV"/>
            <Button text="View Guest Lecturers" onAction="#handleViewGuestLecturers"/>
            <Button text="Edit Guest Lecturer Surveys" onAction="#handleEditSurveys"/>
            <Button text="Analyze Guest Lecturer Surveys" onAction="#handleAnalyzeSurveys"/>
        </VBox>
    </center>

    <!-- Status Bar -->
    <bottom>
        <HBox spacing="10" alignment="CENTER">
            <Label text="Status: Ready"/>
        </HBox>
    </bottom>

</BorderPane>