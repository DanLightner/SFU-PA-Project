<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="800.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.francis.my.sfupa.JavaFX.Controller.GuestLecturer">

<!-- Menu Bar (Top) -->
<top>
    <MenuBar>
        <Menu text="File">
            <MenuItem text="Open" />
            <MenuItem text="Save" />
            <MenuItem onAction="#handleExit" text="Exit" />
        </Menu>
        <Menu text="Edit">
            <MenuItem text="Undo" />
            <MenuItem text="Redo" />
        </Menu>
        <Menu text="Help">
            <MenuItem onAction="#handleAbout" text="About" />
        </Menu>
    </MenuBar>
</top>

<!-- Sidebar Navigation (Left) -->
<left>
    <VBox prefWidth="150.0" spacing="10" style="-fx-background-color: #2C3E50; -fx-padding: 15px;">
        <Button onAction="#handleBackMain" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;" text="Dashboard" underline="true" />
        <Button disable="true" onAction="#handleGuestLecturer" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;" text="Guest Lecturer" underline="true" />
        <Button onAction="#handleGradebook" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;" text="Gradebook" underline="true" />
        <Button onAction="#handleInstructorEval" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;" text="Instructor Eval" underline="true" />
    </VBox>
</left>

<!-- Main Content Area -->
<center>
    <VBox alignment="CENTER" spacing="10">
        <Label style="-fx-font-size: 18px;" text="View Guest Lecturers" />
        <!-- <Button text="Generate Report" onAction="#handleGenerateReport"/> -->
        <Button onAction="#handleBack" text="Back to Guest Lecturer" />
    </VBox>
</center>

</BorderPane>
