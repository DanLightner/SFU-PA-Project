<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21.0.6" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.francis.my.sfupa.JavaFX.Controller.GradebookController">

    <!-- Menu Bar (Top) -->
    <top>
        <MenuBar>
            <Menu text="File">
                <MenuItem text="Open" />
                <MenuItem text="Save" />
                <MenuItem onAction="#handleExit" text="Exit" />
            </Menu>
            <Menu text="Edit">
                <MenuItem text="Undo" />
                <MenuItem text="Redo" />
            </Menu>
            <Menu text="Help">
                <MenuItem onAction="#handleAbout" text="About" />
            </Menu>
        </MenuBar>
    </top>

    <!-- Sidebar Navigation (Left) -->
    <left>
        <VBox prefWidth="170.0" spacing="10" style="-fx-background-color: #2C3E50; -fx-padding: 15px;">
            <Button onAction="#handleBackMain" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;" text="Dashboard" />
            <Button onAction="#handleGuestLecturer" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;" text="Guest Lecturer" />
            <Button disable="true" onAction="#handleGradebook" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;" text="Gradebook" />
            <Button onAction="#handleInstructorEval" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;" text="Instructor Eval" />
        </VBox>
    </left>

    <!-- Main Content Area -->
    <center>
        <VBox alignment="CENTER" spacing="15">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Gradebook Management" />
            <Button onAction="#handleUploadCSV" text="Upload Gradebook CSV" />
            <Button onAction="#handleCheckStudentGrades" text="Check Student Grades" />
            <Button fx:id="runReportButton" onAction="#handleRunReport" text="Run Report" />
        </VBox>
    </center>

    <!-- Status Bar (Bottom) -->
    <bottom>
        <HBox alignment="CENTER" spacing="10" style="-fx-background-color: #F4F4F4; -fx-padding: 5px;">
            <Label text="Status: Ready" />
        </HBox>
    </bottom>

</BorderPane>
