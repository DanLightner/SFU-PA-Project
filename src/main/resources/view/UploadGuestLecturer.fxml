<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="edu.francis.my.sfupa.JavaFX.Controller.GuestLecturer"
            prefHeight="400.0" prefWidth="600.0">

    <!-- Menu Bar (Top) -->
    <top>
        <MenuBar>
            <Menu text="File">
                <MenuItem text="Open" />
                <MenuItem text="Save" />
                <MenuItem text="Exit" onAction="#handleExit"/>
            </Menu>
            <Menu text="Edit">
                <MenuItem text="Undo" />
                <MenuItem text="Redo" />
            </Menu>
            <Menu text="Help">
                <MenuItem text="About" onAction="#handleAbout"/>
            </Menu>
        </MenuBar>
    </top>

    <!-- Sidebar Navigation (Left) -->
    <left>
        <VBox prefWidth="150.0" spacing="10" style="-fx-background-color: #2C3E50; -fx-padding: 15px;">
            <Button text="Dashboard" onAction="#handleBackMain"/>
            <Button text="Guest Lecturer" onAction="#handleGuestLecturer"/>
            <Button text="Gradebook" onAction="#handleGradebook"/>
            <Button text="Instructor Eval" onAction="#handleInstructorEval"/>
        </VBox>
    </left>

    <!-- Main Content Area -->
    <center>
        <VBox spacing="10" alignment="CENTER">
            <Label text="Upload Guest Lecturer CSV" style="-fx-font-size: 18px;"/>

            <Label text="Select Semester:" />
            <ComboBox fx:id="semesterCombo" promptText="Select Semester"/>

            <Label text="Select Course:" />
            <ComboBox fx:id="courseCombo" promptText="Select Course"/>

            <Label text="Select Year:" />
            <ComboBox fx:id="yearCombo" promptText="Select Year"/>

            <Label text="Guest Lecturer Name:" />
            <TextField fx:id="guestLecturerField" promptText="Enter Guest Lecturer Name"/>

            <Button text="Back" onAction="#handleBack"/>
        </VBox>
    </center>

</BorderPane>
